<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="assets_frontend_counter" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_counter_animation/static/src/js/counter_animation.js"/>
            </xpath>
        </template>

        <template id="s_numbers_counter_images" inherit_id="website.s_numbers">
            <xpath expr="//div[@class='row']" position="replace">
                <div class="row">
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="o_we_add_image_container mb-3" style="min-height: 80px;">
                            <img class="img-fluid mx-auto" src="/website_counter_animation/static/src/img/default_icon.png" alt="Ícono de contador por defecto"/>
                        </div>
                        <span class="s_number display-4">12</span>
                        <h6>Useful options</h6>
                    </div>
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="o_we_add_image_container mb-3" style="min-height: 80px;">
                            <img class="img-fluid mx-auto" src="/website_counter_animation/static/src/img/default_icon.png" alt="Ícono de contador por defecto"/>
                        </div>
                        <span class="s_number display-4">45</span>
                        <h6>Beautiful snippets</h6>
                    </div>
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="o_we_add_image_container mb-3" style="min-height: 80px;">
                            <img class="img-fluid mx-auto" src="/website_counter_animation/static/src/img/default_icon.png" alt="Ícono de contador por defecto"/>
                        </div>
                        <span class="s_number display-4">8</span>
                        <h6>Amazing pages</h6>
                    </div>
                    <div class="col-lg-3 text-center pt24 pb24">
                        <div class="o_we_add_image_container mb-3" style="min-height: 80px;">
                            <img class="img-fluid mx-auto" src="/website_counter_animation/static/src/img/default_icon.png" alt="Ícono de contador por defecto"/>
                        </div>
                        <span class="s_number display-4">37</span>
                        <h6>Outstanding images</h6>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="s_numbers_counter" inherit_id="website.s_numbers">
            <xpath expr="//span" position="attributes">
                <attribute name="data-animate">true</attribute>
            </xpath>
        </template>

    </data>
</odoo>